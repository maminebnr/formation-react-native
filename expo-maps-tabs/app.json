{
  "expo": {
    "name": "expo-maps-tabs",
    "slug": "expo-maps-tabs",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Cette app utilise votre position pour centrer la carte autour de vous."
      }
     
    },
    "android": {
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION", "INTERNET"]
    },
    "web": {
      "bundler": "metro"
    }
  }
}

